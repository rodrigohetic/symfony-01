{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="col-9">
        <div class="card">
            <div class="card-body">
            <h1>{{ beer.name }}</h1>
                <p class="card-title">Description: {{ beer.description }}</p>
                <p class="card-text">Degrés: {{ beer.degree }}</p>
                <p class="card-text">Prix: {{ beer.price }} €</p>
                <h2>Pays:</h2>
                <ul class="list-group">
                    {% for country in beerCountry %}

                        <li class="list-group-item">{{ country.name }}</li>
                    {% endfor %}
                </ul>
                <h2>Categories spéciales:</h2>
                <ul class="list-group">
                    {% for catSpecial in beerCatSpecial %}

                        <li class="list-group-item">{{ catSpecial.name }}</li>
                    {% endfor %}
                </ul>
                <h2>Categories normales:</h2>
                <ul class="list-group">
                    {% for catNormal in beerCatNormal %}
                        <li class="list-group-item">{{ catNormal.name }}</li>
                    {% endfor %}
                </ul>
                <p class="card-text"><small class="text-muted">Mise en ligne le {{ beer.publishedAt | date('d/m/Y') }}</small></p>
            </div>
        </div>
    </div>
{% endblock %}