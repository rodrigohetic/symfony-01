{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="col-7">
        <div class="row">
            <div class="col-12">
                <h3 class="mb-4">{{title}}</h3>
            </div>
            <div class="col-12">
                {% for client in clients %}
                <div class="card text-dark mb-5">
                    <div class="card-img-overlay waves-effect waves-light">
                        <p class="card-text">{{client.name}}, age {{client.age}} ans, nombre de bière acheté : {{client.numberBeer}} </p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}