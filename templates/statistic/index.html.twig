{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="col-3">
        <div class="card mb-2 sticky-top">
            <div class="card-body p-1">
                <h3 class="card-title">Statistiques</h3>
                <div class="row no-gutters mb-2">
                    <div class="col-6">
                        <p>Nombre total de clients: {{ clients|length }}</p>
                        <p>Moyenne des bières achetées par client : {{ avgBeersBought }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-7">
        <div class="row">
            <div class="col-12">
                <h3 class="mb-4">{{title}}</h3>
            </div>
            <div class="col-12">
                {% for client in clients %}
                <div class="card text-dark mb-5">
                    <div class="card-img-overlay waves-effect waves-light">
                        <p class="card-text">{{client.name}}, age {{client.age}} ans, nombre de bière acheté : {{client.numberBeer}} </p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}