{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="card col-12 px-0">
        <div class="card-header">
            <h1>{{ title }}</h1>
        </div>
        <div class="card-body d-flex flex-row">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Nombre total de clients: {{ clients|length }}</li>
                <li class="list-group-item">Moyenne des bières achetées par client : {{ avgBeersBought }}</li>
                <li class="list-group-item">écart-type : {{ stdBeersBought }}</li>
            </ul>
            <ul class="list-group list-group-flush">
                {% for client in clients %}
                    <li class="list-group-item">{{client.name}}, {{client.age}} ans, a acheté : {{client.numberBeer}} bières</li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}